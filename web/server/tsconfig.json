{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["../../src/*"],
      "@cli/*": ["../../src/cli/*"],
      "@utils": ["../../src/utils"],
      "@utils/*": ["../../src/utils/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
